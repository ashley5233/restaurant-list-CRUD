{{!-- card --}}
<div class="container">
  <div class="row">
    {{#each restaurants}}
    <div class="col-sm-4 mt-6">
      <div class="card" style="width: 18rem;">
        <img src="{{this.image}}" class="card-img-top" alt="image">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p> {{this.category}}</p>
          <p> {{{this.rating}}} </p>
        </div>
        <div class="card-footer">
          <a href="./restaurants/{{this._id}}/edit">edit</a>
          <a href="./restaurants/{{this._id}}"> detail</a>
          <form action="/restaurants/{{this._id}}/delete" method="POST">
            <button type="submit" onclick="return confirmBtn()">delete</button>
          </form>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  <script>
    function confirmBtn() {
      const yes = confirm('確定要刪除嗎？')
      if (yes) {
        return true
      } else {
        return false
      }
    }
  </script>
</div>