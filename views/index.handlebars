{{!-- search bar --}}
<div class="search-bar">
  <form action="/search" class="search-form">
    <label class="search-title" for="keyword"> search for restaurants...</label>
    <div class="input-group search-input">
      <input class="form-control" type="text" name="keyword" placeholder="Search Restaurant..." aria-label="Search">
      <button class="btn btn-info" type="submit"><i class="fas fa-search"></i></button>
    </div>
  </form>
</div>


<div class="container">
  {{!-- Sort & List Btn --}}
  <div class="row btn-group" role="group">
    <div class="col">
      <a href="/"><i class="list-btn fas fa-th-list"></i></a>
    </div>
    <div class="col">
      <a href="/list"><i class="list-btn fas fa-list"></i></a>
    </div>
    <div class="col">
      {{!-- sort --}}
      <div class="dropdown">
        <button class="btn btn-outline-info dropdown-toggle sort-btn" type="button" id="dropdownMenuButton1"
          data-bs-toggle="dropdown" aria-expanded="false">
          -Select-
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
          <li><a class="dropdown-item" href="/sort/name/asc">名稱 A-Z</a></li>
          <li><a class="dropdown-item" href="/sort/name/desc">名稱 A-Z</a></li>
          <li><a class="dropdown-item" href="/sort/category/asc">類型 A-Z</a></li>
          <li><a class="dropdown-item" href="/sort/category/desc">類型 Z-A</a></li>
          <li><a class="dropdown-item" href="/sort/rating/desc">評分-由高至低</a></li>
          <li><a class="dropdown-item" href="/sort/rating/asc">評分-由低至高</a></li>
        </ul>
      </div>
    </div>
  </div>

  {{!-- card --}}
  <div class="row">
    {{#each restaurants}}
    <div class="col-md-auto">
      <div class="card" style="width: 18rem;">
        <div class="inner">
          <a href="./restaurants/{{this._id}}">
            <img src="{{this.image}}" class="card-img-top" alt="image">
          </a>
        </div>
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p> <i class="fas fa-utensils"></i> {{this.category}}</p>
          <p class="card-rate"> <i class="fas fa-star"></i> {{{this.rating}}} </p>
        </div>
        <div class="card-footer">
          <a class="cardBtn" href="./restaurants/{{this._id}}"> <i class="fas fa-info-circle"></i> Info</a>
          <form action="/restaurants/{{this._id}}/edit" method="GET" class="btnForm">
            <button class="btn-edit" type="submit"><i class="fas fa-edit"></i></button>
          </form>
          <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST" class="btnForm">
            <button class="btn-edit" type="submit" onclick="return confirmBtn()"><i
                class="fas fa-trash-alt"></i></button>
          </form>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  <div class="line">
    <img src="https://res.cloudinary.com/dnivakimu/image/upload/v1615038574/duck-line_y6wjby.png" alt="">
  </div>
  <script>
    function confirmBtn() {
      const yes = confirm('確定要刪除嗎？')
      if (yes) {
        return true
      } else {
        return false
      }
    }
  </script>

</div>